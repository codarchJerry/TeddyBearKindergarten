<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="223dp"
        android:layout_height="184dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teddybear" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/cantarell"
        android:text="@string/kindergarten"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/title_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="228dp"
        android:layout_height="293dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.050000012">

        <Button
            android:id="@+id/register_button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_rectangle"
            android:baselineAligned="false"
            android:elevation="10dp"
            android:onClick="register"
            android:text="@string/registerA"
            android:textAlignment="center"
            android:textColor="@color/title_color"
            android:textIsSelectable="false"
            android:textSize="14sp"
            app:backgroundTint="@color/button_color" />

        <Button
            android:id="@+id/parent_button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_rectangle"
            android:elevation="10dp"
            android:onClick="parentControl"
            android:text="@string/parentA"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            app:backgroundTint="@color/button_color" />

        <Button
            android:id="@+id/kindergarten_button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_rectangle"
            android:elevation="10dp"
            android:onClick="kindergartenControl"
            android:text="@string/schoolA"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            app:backgroundTint="@color/button_color" />

        <Button
            android:id="@+id/check_button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginBottom="228dp"
            android:background="@drawable/rounded_rectangle"
            android:elevation="10dp"
            android:onClick="checkScreen"
            android:text="@string/checkA"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            app:backgroundTint="@color/button_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allura"
        android:text="Teddy Bear"
        android:textAlignment="center"
        android:textColor="@color/title_color"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/translateButton"
        android:layout_width="52dp"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#00FFFFFF"
        android:foreground="@drawable/translate"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>